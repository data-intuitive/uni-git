{
  "name": "@uni-git/core",
  "version": "0.1.0",
  "description": "Core types, interfaces, error classes, and utilities for unified Git provider API. Foundation package for GitHub, GitLab, and Bitbucket integration.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "git",
    "github",
    "gitlab",
    "bitbucket",
    "api",
    "typescript",
    "core",
    "types",
    "interfaces",
    "errors",
    "utilities",
    "foundation",
    "provider",
    "repository"
  ],
  "author": {
    "name": "Data Intuitive",
    "url": "https://data-intuitive.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/data-intuitive/uni-git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/data-intuitive/uni-git.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/data-intuitive/uni-git/issues"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "vitest": "^2"
  }
}
