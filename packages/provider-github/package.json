{
  "name": "@uni-git/provider-github",
  "version": "0.0.1",
  "description": "GitHub provider for unified Git API with support for GitHub.com and GitHub Enterprise Server. Supports personal access tokens, fine-grained tokens, and GitHub Apps.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --reporter=verbose --testNamePattern='Integration Tests' src/*.integration.test.ts"
  },
  "keywords": [
    "git",
    "github",
    "api",
    "typescript",
    "provider",
    "enterprise",
    "organization",
    "repository",
    "octokit",
    "github-api",
    "github-apps",
    "personal-access-token",
    "fine-grained-token"
  ],
  "author": {
    "name": "Data Intuitive",
    "url": "https://data-intuitive.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/data-intuitive/uni-git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/data-intuitive/uni-git.git",
    "directory": "packages/provider-github"
  },
  "bugs": {
    "url": "https://github.com/data-intuitive/uni-git/issues"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "@octokit/rest": "^21",
    "@octokit/auth-app": "^7"
  },
  "peerDependenciesMeta": {
    "@octokit/auth-app": {
      "optional": true
    }
  },
  "dependencies": {
    "@uni-git/core": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^2"
  }
}
