{
  "name": "@uni-git/provider-bitbucket",
  "version": "0.0.1",
  "description": "Bitbucket provider for unified Git API with support for Bitbucket Cloud and Bitbucket Server/Data Center. Supports app passwords, OAuth tokens, and basic authentication.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --reporter=verbose --testNamePattern='Integration Tests' src/*.integration.test.ts"
  },
  "keywords": [
    "git",
    "bitbucket",
    "api",
    "typescript",
    "provider",
    "cloud",
    "server", 
    "data-center",
    "workspaces",
    "projects",
    "app-password",
    "oauth",
    "basic-auth"
  ],
  "author": {
    "name": "Data Intuitive",
    "url": "https://data-intuitive.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/data-intuitive/uni-git#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/data-intuitive/uni-git.git",
    "directory": "packages/provider-bitbucket"
  },
  "bugs": {
    "url": "https://github.com/data-intuitive/uni-git/issues"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "bitbucket": "^2"
  },
  "dependencies": {
    "@uni-git/core": "workspace:*"
  },
  "devDependencies": {
    "vitest": "^2"
  }
}
