{
  "name": "@uni-git/unified",
  "version": "0.0.1",
  "description": "Unified interface for all Git providers",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "git",
    "github",
    "gitlab",
    "bitbucket",
    "api",
    "typescript",
    "unified"
  ],
  "author": "Data Intuitive",
  "license": "MIT",
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@uni-git/core": "workspace:*"
  },
  "peerDependencies": {
    "@uni-git/provider-github": "workspace:*",
    "@uni-git/provider-gitlab": "workspace:*",
    "@uni-git/provider-bitbucket": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@uni-git/provider-github": {
      "optional": true
    },
    "@uni-git/provider-gitlab": {
      "optional": true
    },
    "@uni-git/provider-bitbucket": {
      "optional": true
    }
  },
  "devDependencies": {
    "vitest": "^2"
  }
}
