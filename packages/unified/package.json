{
  "name": "@uni-git/unified",
  "version": "0.0.1",
  "description": "Unified factory for creating Git providers with automatic organization discovery and enhanced convenience features. Supports GitHub, GitLab, and Bitbucket through a consistent API.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist *.tsbuildinfo",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run --reporter=verbose --testNamePattern='Integration Tests' src/*.integration.test.ts"
  },
  "keywords": [
    "git",
    "github",
    "gitlab", 
    "bitbucket",
    "api",
    "typescript",
    "unified",
    "factory",
    "provider",
    "organization",
    "repository",
    "enterprise",
    "self-hosted",
    "multi-platform"
  ],
  "author": {
    "name": "Data Intuitive",
    "url": "https://data-intuitive.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/data-intuitive/uni-git#readme",
  "repository": {
    "type": "git", 
    "url": "https://github.com/data-intuitive/uni-git.git",
    "directory": "packages/unified"
  },
  "bugs": {
    "url": "https://github.com/data-intuitive/uni-git/issues"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@uni-git/core": "workspace:*"
  },
  "peerDependencies": {
    "@uni-git/provider-github": "workspace:*",
    "@uni-git/provider-gitlab": "workspace:*",
    "@uni-git/provider-bitbucket": "workspace:*"
  },
  "peerDependenciesMeta": {
    "@uni-git/provider-github": {
      "optional": true
    },
    "@uni-git/provider-gitlab": {
      "optional": true
    },
    "@uni-git/provider-bitbucket": {
      "optional": true
    }
  },
  "devDependencies": {
    "vitest": "^2"
  }
}
